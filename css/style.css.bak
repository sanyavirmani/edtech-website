@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;1,400&display=swap');

body {
    line-height: 1.8;
    color: #898fa1;
    font-size: 15px; 
    font-family: 'Lato',sans-serif;
    overflow-x: hidden;
}

h1,h2,h3,h4,h5,h6{
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #11245a;
}

a{
    font-weight: 700;
    transition: all 0.4s ease;
}

img{
    width: 100px;
}

small{
    font-size: 12px;
    letter-spacing: 2px;
    font-weight: 700;
}

section{
    padding-top: 100px;
    padding-bottom: 100px;
}

.navbar{
    border-bottom: 5px inset white;
}

.navbar .nav-link{
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color:white;
}

.navbar-light .navbar-nav .nav-item active{
    color: rgba(255, 0, 0, 0.63);
}

.navbarScroll.navbarDark {
    background-color: black;
}

#home{
    background: linear-gradient(rgb(17, 36, 90, 0.8),rgb(17, 36, 90, 0.8)), url('../images/bg3.jpg');
    min-height: 100vh;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: center;
}

#home h1{
    font-weight: 700;
    margin: 18px auto;
}

#home p{
    max-width: 55%;
    margin: auto;
}

form{
    font-weight: 800;
    font-size: 25px;
    text-transform: uppercase;
    width: 100%;
    height: 100%;
    position: relative;
}

#search{
    background-color: white;
    border-radius: 25px 0 0 25px;
    border-width: 5px;
    border-style: outset;
    border-color: white;
}

.button{
    border-width: 5px;
    border-style: outset;
    border-color: white;
}

.features{
    width: 90%;
    margin: auto;
    padding-top: 60px;
}

.title{
    text-align: center;
    font-weight: 600;
    font-size: 50px;
}

.subtitle{
    text-align: center;
    margin-bottom: 50px;
    font-size: 18px;
}

.feature-box{
    background: #F9F9FF;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 10px;
    cursor: pointer;
    margin-bottom: 10px;
    transition: .4s;
    padding: 20px 30px 10px 30px;
}

.feature-img{
    width: 60px;
}

.feature-box h6{
    margin-bottom: 10px;
    font-weight: bold;
    font-size: 20px;
    color:  rgb(46, 46, 59);
    padding: 13px 0 7px 0;
}

.feature-box p{
    font-size: 16px;
    color: #808080;
    text-align: center;
}

.count{
    margin-top: 30px;
    padding-top: 50px;
    padding-bottom: 50px;
    width: 100%;
    background-image: url('../images/count.webp');
    text-align: center;
}

.image{
    width: 90%;
    margin: auto;
    display: flex;
    justify-content: space-around;
}

.text{
    width: 22vw;
}

.text h1{
    color:white;
    margin-bottom: 10px;
    font-size: 40px;
}

.text p{
    color: white;
    font-size: 20px;
}

.trust{
    padding: 0px;
    margin: 0;
    margin-top: 20px;
}

.heading{
    position: relative; top:-50px;
    text-align:center;
    margin: 20px auto;
    font-size: 40px;
}

.para{
    position: relative; top:-50px;
    margin-top: -50px;
    text-align: center;
    max-width: 720px;
    margin: auto;
}



#courses{
    padding: 8vw 8vw 0 8vw;
    padding-top: 100px;
    padding-bottom: 0px;
    text-align: center;
}

#courses .course-box{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px,1fr));
    grid-gap: 1rem;
    margin-top: 50px;
}

#courses .course{
    text-align: start;
    background: #F9F9FF;
    height: 100%;
    position: relative;
}

#courses .course img{
    width: 100%;
    height: 60%;
    background-size: cover;
    background-position: center;
}

#courses .course .details{
    padding: 15px 15px 0 15px;
}
  
#courses .course .details i{
    color: #FDC93B;
    font-size: 10px;
}

#courses .course .cost{
    background-color: rgb(74,74,136);
    color: #fff;
    line-height: 70px;
    width: 70px;
    height: 70px;
    text-align: center;
    border-radius: 50%;
    position: absolute;
    right: 15px;
    bottom: 100px;
}

#experts{
    padding: 8vw 8vw 0 8vw;
    padding-top: 90px;
    text-align: center;
}

#experts .expert-box{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px,1fr));
    grid-gap: 1rem;
    margin-top: 50px;
}

#experts .expert-box .profile{
    background: #F9F9FF;
    padding: 30px 10px;
}

.profile img{
    height: 150px;
    width: 150px;
    border-style: solid;
    border-width: 5px;
    border-color: grey;
    border-radius: 50%;
}

.social-links{
    margin-top: 10px;
    color: rgb(21,21,100);
}

.social-links i{
    padding: 10px 13px;
    border: 1px solid rgb(21,21,100);
    cursor: pointer;
    transition: 0.3s ease;
}

.social-links i:hover{
    background: rgb(21,21,100);
    color: #fff;
    border: 1px solid rgb(21,21,100);
    cursor: pointer;
}

#testimonials{
    padding-bottom: 0px;
}

#testimonials img{
    width: 65px;
    height: 65px;
    border-radius: 100px;
    transition: all 0.4s ease;
}

#testimonials .nav-pills .nav-link.active{
    background-color: transparent;
}

#testimonials .nav-pills .nav-link.active img{
transform: scale(1.3);
}

.review .stars{
    color: rgb(46, 46, 59);
}

.review p{
    max-width: 720px;
    margin: 24px auto;
    font-style: italic;
}

#contactus{
    padding-top: 70px;
}

.contactContent{
    display: flex;
    width: 100vw;
    justify-content: space-evenly;
}

.footer{
    background: linear-gradient(rgb(17, 36, 90, 0.8),rgb(17, 36, 90, 0.8));
    padding-top: 80px;
    font-size: 16px;
    color: white;
}

.footer-content{
    display: flex;
    justify-content: space-evenly;
    width: 90%;
    margin: auto;
}

.footer-containter{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 80px;
}

.footer-containter > div h4{
    margin-bottom: 19px;
}

.footer-1 p{
    margin: 0 0 40px 50px;
}

footer ul li{
    margin-bottom: 11px;
}

footer ul li a:hover{
    text-decoration: underline;
}

.footer-socials{
    display: flex;
    gap: 16px;
    font-size: 19px;
    margin-top: 32px;
}

.footer-copyright{
    width: 100%;
    margin: auto;
    text-align: center;
    margin-top: -20px;
    padding: 19px 0;
    border-top: 1px solid rgb(21,21,100);
}